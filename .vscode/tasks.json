{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "openocd",
      "type": "shell",
      "isBackground": true,
      "windows":{
        // Options and command for manually installed openocd
        /*"options": {
          "cwd": "C:/Users/mikae/esp/openocd-esp32"
        },*/
        //"command": "bin/openocd -s share/openocd/scripts -f interface/jlink.cfg -f board/esp-wroom-32.cfg"
 
        //Command for installed openocd with ESP-IDF Tools Installer
        "command": "openocd -f interface/jlink.cfg -f board/esp-wroom-32.cfg"
      },
      "linux": {
        "options": {
          "cwd": "${env:HOME}/esp/openocd-esp32"
        },
        "command": "bin/openocd -s share/openocd/scripts -f interface/jlink.cfg -f board/esp-wroom-32.cfg"
      }
    },

    {
      "label": "build",
      "type": "shell",
      "isBackground": true,
      "windows":{
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "command": "python ${env:IDF_PATH}/tools/idf.py build",   //Make sure that python27 is in Path
      },
      "linux": {
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "command": "idf.py build",
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    {
      "label": "clean",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "windows": {
        "command": "python ${env:IDF_PATH}/tools/idf.py clean",   //Make sure that python27 is in Path
      },
      "linux": {
        "command": "idf.py clean",
      },

      "presentation": {
        "reveal": "always",
      },
      "problemMatcher": []
    },

    {
      "label": "menuconfig",
      "type":"shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "windows": {
        "command": "python ${env:IDF_PATH}/tools/idf.py menuconfig",  
      },
      "linux": {
        "command": "idf.py menuconfig",
      },
      "presentation": {
          "reveal": "always",
      },
      "problemMatcher": []
    },

    {
      "label": "flash app USB",
      "type":"shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "windows": {
        "command": "python ${env:IDF_PATH}/tools/idf.py -p ${input:COMPORT_WIN} flash",  
      },
      "linux": {
        "command": "idf.py -p ${input:COMPORT_LINUX} flash",
      },
      
      "presentation": {
          "reveal": "always",
      },
      "problemMatcher": []
    },

    {
      "label": "copy-binary-towin",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "linux": {
        "command": "cp ./build/TLS3001_SPI.bin /mnt/c/esp32/openocd-esp32-win32-0.10.0-esp32-20190313/openocd-esp32/.",
      },
      "presentation": {
        "reveal": "always",
      },
      "problemMatcher": []
    }
  ],

  "inputs": [
    {
        "id": "COMPORT_WIN",
        "description": "Comport:",
        "default": "COMx",
        "type": "promptString"
    },
    {
      "id": "COMPORT_LINUX",
      "description": "Comport:",
      "default": "/dev/ttyUSBx",
      "type": "promptString"
    }

]
}